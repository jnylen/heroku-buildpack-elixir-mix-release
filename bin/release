#!/usr/bin/env bash

build_path=$(cd $1 && pwd)
app_names=$(cat $build_path/_build/elixir-mix-release-buildpack-app-names)
app_names=${app_names//;/$'\n'}

cat << EOF
---
addons:
  []
default_process_types:
EOF

for app_name in $app_names
do
    cat << EOF
  ${app_name}: _build/prod/rel/${app_name}/bin/${app_name} start
EOF
done
